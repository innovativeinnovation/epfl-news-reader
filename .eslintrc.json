{
  "extends": "standard",
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "caches": true,
    "document": true,
    "Dom7": true,
    "EPFLNews": true,
    "fetch": true,
    "Framework7": true,
    "localStorage": true,
    "location": true,
    "navigator": true,
    "Promise": true,
    "self": true,
    "sprintf": true,
    "window": true
  },
  "rules": {
    "max-len": [2, 80],
    "no-var": 0,
    "semi": [2, "always"],
    "strict": [2, "global"]
  }
}
